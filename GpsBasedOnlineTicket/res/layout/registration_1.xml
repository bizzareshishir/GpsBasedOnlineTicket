<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:layout_gravity="fill_horizontal">

	<LinearLayout
			android:id="@+id/linearLayout100"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:gravity="center"
				android:text="Registration Form for Railway Ticket Booking"
				android:textSize="18dp" android:textStyle="bold" />
				

			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Name  :"
				android:textSize="16dp" />

			<EditText 
				android:id="@+id/edt_name" 
				android:layout_width="fill_parent"
				android:hint="Enter Your Name ....." 
				android:layout_height="wrap_content">
			</EditText>
			
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="User Name  :"
				android:textSize="16dp" />

			<EditText 
				android:id="@+id/edt_uname" 
				android:layout_width="fill_parent"
				android:hint="Enter Your user name ....." 
				android:layout_height="wrap_content">
			</EditText>
			
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="Create Password   :"
				android:textSize="16dp" />

			<EditText 
				android:id="@+id/edt_upass" 
				android:layout_width="fill_parent"
				android:hint="Enter Your password ....." 
				android:layout_height="wrap_content">
			</EditText>
			
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="Confirm Your Password   :"
				android:textSize="16dp" />
			<EditText 
				android:id="@+id/edt_ucpass" 
				android:layout_width="fill_parent"
				android:hint="Enter Your password ....." 
				android:layout_height="wrap_content">
			</EditText>
			

			<TextView 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="Address :"
				android:textSize="16dp" 
				android:textStyle="bold" />

			<EditText android:id="@+id/edt_address"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:hint="Enter Address....." 
				android:lines="3" />

			
				
			
			<TextView 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="Date Of Birth :"
				android:textSize="16dp" 
				android:textStyle="bold" />
				
				
	

		</LinearLayout>

		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:text="Gender :"
			android:textSize="16dp" 
			android:textStyle="bold" />

		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:orientation="horizontal">

			<RadioGroup 
				android:layout_height="50dp" 
				android:id="@+id/gender_group"
				android:layout_width="fill_parent" 
				android:orientation="horizontal">

				<RadioButton 
					android:text="Male" 
					android:textSize="16dp"
					android:layout_width="wrap_content" 
					android:id="@+id/r_btn_male"
					android:layout_height="wrap_content" 
					android:checked="true">
				</RadioButton>
				<RadioButton 
					android:text="Female" 
					android:textSize="16dp"
					android:layout_width="wrap_content" 
					android:id="@+id/r_btn_female"
					android:layout_height="wrap_content">
				</RadioButton>
			</RadioGroup>
		</LinearLayout>


		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="E-mail  :"
			android:textSize="16dp" android:textStyle="bold" />

		<EditText android:id="@+id/edt_email" android:layout_width="fill_parent"
			android:hint="Enter Your email_id....." android:layout_height="wrap_content">
		</EditText>
		
		
		<TextView 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="Contact  Number :"
				android:textSize="16dp" 
				android:textStyle="bold" />
				
		<EditText 
			android:id="@+id/edt_contact" 
			android:layout_width="fill_parent"
			android:hint="Enter Your contact number.." 
			android:layout_height="wrap_content">
		</EditText>
		
		
			
			
		<TextView 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="College Id :"
				android:textSize="16dp" 
				android:textStyle="bold" />
				
		<EditText 
			android:id="@+id/edt_college_id" 
			android:layout_width="fill_parent"
			android:hint="Enter  College Id  number ....." 
			android:layout_height="wrap_content">
		</EditText>
		
		
		
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:gravity="center">

			<Button android:id="@+id/btnLogin" android:layout_width="100dp"
				android:layout_height="wrap_content" android:gravity="center_vertical"
				android:text="Submit" android:textSize="16dp" />
			<Button 
				android:id="@+id/btn_cancel" 
				android:layout_width="100dp"
				android:layout_height="wrap_content" 
				android:text="Cancel"
				android:textSize="16dp"/>
				
		</LinearLayout>
	</LinearLayout>

</ScrollView>
