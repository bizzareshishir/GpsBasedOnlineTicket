<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
	<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:gravity="center"
    android:textSize="22sp"
    android:textStyle="bold"
    android:text="OnlineTicketBooking"/>
    
    <LinearLayout
    	android:orientation="horizontal"
    	
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
			<Button 
				android:text="CENTRAL" 
				android:gravity="left"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="40dp"
				android:id="@+id/btn_central" 
				android:layout_width="150dp" 
				android:layout_height="wrap_content">
			</Button>
		
			<Button
				android:text="WESTERN" 
				android:id="@+id/btn_western" 
				android:gravity="right"
				android:layout_marginTop="40dp"
				android:layout_marginRight="20dp"
				android:layout_width="150dp" 
				android:layout_height="wrap_content">
			</Button>
	</LinearLayout>
	<LinearLayout
    	android:orientation="horizontal"
    	
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
			<Button 
				android:text="HARBOUR"
				android:gravity="left"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="100dp"
				android:id="@+id/btn_harbour" 
				android:layout_width="150dp" 
				android:layout_height="wrap_content">
			</Button>
			<Button 
				android:text="THANE_VASHI" 
				android:gravity="right"
				android:layout_marginRight="20dp"
				android:layout_marginTop="100dp"
				android:id="@+id/btn_thane_vashi" 
				android:layout_width="150dp" 
				android:layout_height="wrap_content">
			</Button>
	</LinearLayout>
</LinearLayout>
